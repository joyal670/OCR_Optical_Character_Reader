<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ocr_opticalcharacterreader">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".Application.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/launchericon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/launchericon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.AboutActivity"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".Activity.SavedFilesActivity"
            android:screenOrientation="locked"/>
        <activity android:name=".Activity.WebViewActivity"
            android:screenOrientation="locked"/>
        <activity android:name=".Activity.Splash_Screen"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MainActivity"
            android:screenOrientation="locked"/>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>